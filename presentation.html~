          	<section class="scheme">
          	<img height="30" src="x_with_line.png" alt="x_with_line" /> = 
          	<math>
          		<msup>
                  <mi>x</mi>
                  <mn>2</mn>
              </msup>
              	<mo>+</mo>
              <mfrac>
              	<mrow>1</mrow>
              	<mrow>2</mrow>
              </mfrac>
              <mi>xy</mi>
              <mo>+</mo>
              <mfrac>
              	<mrow>1</mrow>
              	<mrow>2</mrow>
              </mfrac>
              <mi>yx</mi>
              <mo>+</mo>
              <mfrac>
              	<mrow>1</mrow>
              	<mrow>4</mrow>
              </mfrac>
              <msup>
                <mi>y</mi>
                <mn>2</mn>
              </msup>
                =
                <msup>
                  <mi>x</mi>
                  <mn>2</mn>
              </msup>
              	<mo>+</mo><mi>xy</mi>
              <mo>+</mo>
              
              <mfrac>
              	<mrow>1</mrow>
              	<mrow>4</mrow>
